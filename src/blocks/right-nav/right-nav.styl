.right-nav
  margin 0
  &__item
    float left
    list-style none
    padding 25px 20px 0
    font-size 20px
    line-height 20px
    border-left 2px solid #f2f2f2
    height 100%
    cursor pointer
    &.dropdown
      padding-top 27px
      font-weight bold
      color #999
      position relative
      &:after
        content: ' '
        height: 0
        position: absolute
        top: 30px
        right 10px
        width: 0
        border: 5px solid transparent
        border-top-color: #999
  &__link
    padding-top 16px
    text-decoration none
    span
      color #f9aa16
      vertical-align top
      font-weight bold
      margin-left 3px
    svg
      height 20px
      width 20px
